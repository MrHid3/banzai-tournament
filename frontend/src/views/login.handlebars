<head>
    <meta charset="utf-8">
    <title>Login</title>
    <link rel="stylesheet" href="/login/login.css">
</head>
<body>
    <div id="login-container">
        <form id="login-form">
            <select name="role" id="role-select">
                {{#if test}}
                    <option value="test">Test</option>
                {{/if}}
                <option value="adder">Dodawanie</option>
                <option value="bigReferee">Sędzia Główny</option>
                <option value="referee">Sędzia Mniejszy</option>
                <option value="admin">Zarządzanie</option>
            </select>
        <input id="password-input" type="password" name="password" placeholder="Hasło" required>
        <input type="submit" value="Zaloguj się">
        </form>
    </div>
<script src="/login/login.js" type="module"></script>
</body>